<%= render "carousel"%>

<%= form_tag(events_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Events" %>
  <%= submit_tag "Search" %>
<% end %>


<% if @events.present? %>
  <%= render @events %>
<% else %>
  <p>There are no events containing the term(s) <%= params[:search] %>.</p>
<% end %>