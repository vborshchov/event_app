<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= current_user.name %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
      <div class="col-sm-4">
        <%= image_tag("logo") %>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :name, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :phone, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :phone, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :skype, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :skype, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :site, "Web site", class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :site, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= f.label :password, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
            <p class="help-block">
              <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it', :default => "leave blank if you don't want to change it") %>)</i>
            </p>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-sm-4 control-label" %><br />
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, class: "form-control"  %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :current_password, class: "col-sm-4 control-label"  %>
          <div class="col-sm-8">
            <%= f.password_field :current_password, class: "form-control" %>
            <p class="help-block">
              <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes', :default => 'we need your current password to confirm your changes') %>)</i>
            </p>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="form-group">
          <%= f.label :description, "About me" %>
          <%= f.text_area :description, class: "form-control", size: "30x7" %>
        </div>
      </div>
      <div class="col-sm-12 text-center">
        <%= f.submit "Save settings", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <%= render partial: "users/user", collection: current_user.subscribers, as: :user %>
</div>